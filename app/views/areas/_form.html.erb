<%= form_for @area, :html => { :class => "form-horizontal area" } do |f| %>

  <% if @area.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@area.errors.count, "error") %> prohibited this area from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @area.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :suite_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :suite_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:suite_number) %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :status, :class => 'form-control' %>
    </div>
    <%=f.error_span(:status) %>
  </div>
  <div class="form-group">
    <%= f.label :sq_ft, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sq_ft, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sq_ft) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                areas_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
